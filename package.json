{
  "name": "blank-theme",
  "version": "2.0.0",
  "description": "A boilerplate from Wordpress theme.",
  "main": "tailwind.config.js",
  "scripts": {
    "dev": "webpack --mode development && npx tailwindcss -i ./resources/css/style.css -o ./static/dist/style.css",
    "dev:css": "npx tailwindcss -i ./resources/css/style.css -o ./static/dist/style.css --watch",
    "dev:js": "webpack --watch --mode development",
    "build": "webpack --mode production && npx tailwindcss -i ./resources/css/style.css -o ./static/dist/style.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devnicholas/blank-theme.git"
  },
  "author": "Nicholas Stefano",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devnicholas/blank-theme/issues"
  },
  "homepage": "https://github.com/devnicholas/blank-theme#readme",
  "dependencies": {
    "glob": "^7.2.0",
    "tailwindcss": "^3.2.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "devDependencies": {}
}
